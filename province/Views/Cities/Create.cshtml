@model province.Models.Entities.City


<!DOCTYPE html>
    <html>
    <head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
        <title></title>
    </head>
    <body>
    
<h2 class="text-end">افزودن شهر</h2>

    <form asp-action="Create" method="post" class="container  w-50">
    <div class="form-group">
        <label class="form-label">نام شهر</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ProvinceId">استان</label>
        <select asp-for="ProvinceId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Provinces, "Id", "Name"))">
            <option value="">انتخاب کنید</option>
        </select>
        <span asp-validation-for="ProvinceId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-75">ثبت</button>
</form>
    </body>
    </html>
